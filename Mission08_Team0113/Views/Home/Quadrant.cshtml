@model List<Mission08_Team0113.Models.Task>

<div class="container text-center mt-4">
    <h2>Tasks</h2>

    <!-- Header Row -->
    <div class="row border">
        <div class="col-1 border"></div>
        <div class="col-5 border fw-bold py-2">Urgent</div>
        <div class="col-5 border fw-bold py-2">Not Urgent</div>
    </div>

    <!-- Row for Important Quadrants -->
    <div class="row border">
        <!-- Y-Axis Label (Important) -->
        <div class="col-1 d-flex align-items-center justify-content-center border fw-bold p-0"
             style="writing-mode: vertical-rl; transform: rotate(180deg);">
            Important
        </div>
        <div class="col-5 border p-3">
            <h5>Quadrant 1 - Urgent & Important</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == "Q1"))
            {
                <div class="d-flex justify-content-between align-items-center">
                    <p>@task.TaskName - Due: @(task.DueDate.HasValue ? task.DueDate.Value.ToShortDateString() : "No Due Date")
                    </p>
                    <div>
                        <a href="/Home/Task/@task.TaskId" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Home/Delete/@task.TaskId" class="btn btn-danger btn-sm">Delete</a>                    </div>
                </div>
            }
        </div>
        <div class="col-5 border p-3">
            <h5>Quadrant 2 - Not Urgent but Important</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == "Q2"))
            {
                <div class="d-flex justify-content-between align-items-center">
                    <p>@task.TaskName - Due: @(task.DueDate.HasValue ? task.DueDate.Value.ToShortDateString() : "No Due Date")
                    </p>
                    <div>
                        <a href="/Home/Task/@task.TaskId" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Home/Delete/@task.TaskId" class="btn btn-danger btn-sm">Delete</a>                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Row for Not Important Quadrants -->
    <div class="row border">
        <!-- Y-Axis Label (Not Important) -->
        <div class="col-1 d-flex align-items-center justify-content-center border fw-bold p-0"
             style="writing-mode: vertical-rl; transform: rotate(180deg);">
            Not Important
        </div>
        <div class="col-5 border p-3">
            <h5>Quadrant 3 - Urgent but Not Important</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == "Q3"))
            {
                <div class="d-flex justify-content-between align-items-center">
                    <p>@task.TaskName - Due: @(task.DueDate.HasValue ? task.DueDate.Value.ToShortDateString() : "No Due Date")
                    </p>
                    <div>
                        <a href="/Home/Task/@task.TaskId" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Home/Delete/@task.TaskId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            }
        </div>
        <div class="col-5 border p-3">
            <h5>Quadrant 4 - Not Urgent & Not Important</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == "Q4"))
            {
                <div class="d-flex justify-content-between align-items-center">
                    <p>@task.TaskName - Due: @(task.DueDate.HasValue ? task.DueDate.Value.ToShortDateString() : "No Due Date")
                    </p>
                    <div>
                        <a href="/Home/Task/@task.TaskId" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Home/Delete/@task.TaskId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>