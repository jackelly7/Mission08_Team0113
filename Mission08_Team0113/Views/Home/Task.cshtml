@model Mission08_Team0113.Models.Task


@* <h2>@(Model.TaskId == 0 ? "Create Task" : "Edit Task")</h2> *@

<form method="post"
      asp-action="@(Model.TaskId == 0 ? "CreateTask" : "EditTask")" class="container bg-light p-4 rounded shadow-sm">
    <input type="hidden" asp-for="TaskId" />

    <div class="mb-3">
        <label asp-for="TaskName" class="form-label">Task Name:</label>
        <input asp-for="TaskName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Due Date:</label>
        <input asp-for="DueDate" type="date" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Quadrant" class="form-label">Quadrant:</label>
        <select asp-for="Quadrant" class="form-select">
            <option value="1">Quadrant 1 - Urgent & Important</option>
            <option value="2">Quadrant 2 - Not Urgent but Important</option>
            <option value="3">Quadrant 3 - Urgent but Not Important</option>
            <option value="4">Quadrant 4 - Not Urgent & Not Important</option>
        </select>
    </div>

    <input type="hidden" asp-for="CategoryId" />

    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label">Category Name:</label>
        <input asp-for="CategoryName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Completed" class="form-label">Completed:</label>
        <select asp-for="Completed" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>

